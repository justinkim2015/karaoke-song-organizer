<div class="md:center">
  <h1 class='text-2xl font-extrabold mx-3 md:text-3xl'>Edit Profile:</h1>
  
  <div class="box">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
  
      <div class="md:center">
        <div class="field my-1">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:'input' %>
        </div>
        <div class="field my-1">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:'input' %>
        </div>
        <div class="field my-1">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input' %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="field my-1">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:'input' %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
        <div class="field my-1">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'input' %>
        </div>
        <div class="field my-1">
          <%= f.label :current_password %><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class:'input' %>
        </div>
        <div class="actions">
          <%= f.submit "Update", class:'btn btn-blue my-1' %>
        </div>
      </div>
    <% end %>
  
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:'btn btn-red my-1' %>
  
    <%= link_to "Back", :back, class:'text-lg font-bold link-primary' %>
  </div>
</div>
